<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Chat</title>
    <link rel="stylesheet" href="room.css">
</head>
<body>
    <header>
        <a href="/logout">Salir</a>
    </header>

    <div class="contenedor">
        <div class="nameUser">
            <h3 id="nameUser" data-name="<%=user.nombre%>">Hi <%= user.nombre %> </h3>
            <h3 id="jnh" data-id="<%=user._id%>"></h3>
        </div>
        <div class="list_chat">
            <div class="msjk"> Mensajes</div>
            <div id="name_chat"></div>
        </div>
        <div class="box_chat">
            <div id="chat"></div>
            <div class="fooder">
                <form id="form">
                    <input type="text" name="texto" autocomplete="off" id="text_chat">
                    <button type="submit">Enviar</button>
                </form>
            </div>        
        </div>
    </div>

    <script src="http://localhost:5000/socket.io/socket.io.js"></script>
    <script src="room.js"></script>
</body>
</html>